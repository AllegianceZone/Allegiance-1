<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="PigClient" Height="350" Width="525">
    <Grid>
        <Button IsEnabled="{Binding Path=pigButtonEnable}" Content="Create Pig" HorizontalAlignment="Left" Margin="10,38,0,0" VerticalAlignment="Top" Width="90" Click="CreatePig_Click"/>
        <TextBox HorizontalAlignment="Left" Height="299" Margin="105,10,0,0" TextWrapping="Wrap" Text="{Binding Path=logText}" VerticalAlignment="Top" Width="402"/>
        <Button Content="Enable Events" HorizontalAlignment="Left" Margin="10,63,0,0" VerticalAlignment="Top" Width="90" Click="EnableEvents_Click"/>
        <Button Content="Disable Events" HorizontalAlignment="Left" Margin="10,88,0,0" VerticalAlignment="Top" Width="90" Click="DisableEvents_Click"/>
        <Button Content="Connect" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="90" Click="Connect_Click"/>

    </Grid>
</Window>
