<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="PigClient" Height="350" Width="525">
    <Grid>
        <Button IsEnabled="{Binding Path=pigButtonEnable}" Content="Create Pig" HorizontalAlignment="Left" Margin="10,67,0,0" VerticalAlignment="Top" Width="90" Click="CreatePig_Click"/>
        <TextBox Margin="105,38,10,10" TextWrapping="Wrap" Text="{Binding Path=logText}"/>
        <Button Content="Enable Events" HorizontalAlignment="Left" Margin="10,92,0,0" VerticalAlignment="Top" Width="90" Click="EnableEvents_Click"/>
        <Button Content="Disable Events" HorizontalAlignment="Left" Margin="10,117,0,0" VerticalAlignment="Top" Width="90" Click="DisableEvents_Click"/>
        <Button Content="Connect" HorizontalAlignment="Left" Margin="10,37,0,0" VerticalAlignment="Top" Width="90" Click="Connect_Click"/>
        <TextBlock Margin="0,10,135,0" TextWrapping="Wrap" Text="Pig To Create" VerticalAlignment="Top" HorizontalAlignment="Right" Width="76"/>
        <ComboBox Margin="0,8,10,0" VerticalAlignment="Top" ItemsSource="{Binding Path=pigScripts}" SelectedItem="{Binding Path=pigScript}" HorizontalAlignment="Right" Width="120" />
        <Button Content="Clear Log" HorizontalAlignment="Left" Margin="10,0,0,10" Width="90" Click="ClearLog_Click" Height="20" VerticalAlignment="Bottom"/>
        <Button Content="Disconnect" HorizontalAlignment="Left" Margin="10,12,0,0" VerticalAlignment="Top" Width="90" Click="Disconnect_Click"/>


    </Grid>
</Window>
